<!DOCTYPE html>
<html>
  <head>
    <title>hí hí</title>
    <%= stylesheet_link_tag "scaffolds" %>
    <%= stylesheet_link_tag "foodapp" %>
  </head>

    <body id="store">
    <ul>
        <li><a class="active" href="http://localhost:3000/"><strong>Trang chủ</a></li>
        <li><a href="http://localhost:3000/store/index">Thực đơn</a></li>
        <li><a href="#contact">Liên hệ</a></li>
    </ul>

        <div id="columns">
            <div id="side">            
                <% if @cart %>
                    <%= hidden_field(@cart.line_items.empty?, :id => "cart") do %>
                    <%= render @cart %>
                    <% end %>
                <% end %>
            
            <% if @types != nil %>
                <% @types.each do |type| %>
                    <div class="hoho">
                        <%= link_to type.type_food, store_index_url(type: type.id) %>
                    </div>
                <% end %>
            <% end %>    
            </div>
        </div>

        <div id="main">
            <%= yield %>
        </div>

    </body>
</html>