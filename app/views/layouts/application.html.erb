<!DOCTYPE html>
<html>
  <head>
    <title>hí hí</title>
    <%= stylesheet_link_tag "scaffolds" %>
    <%= stylesheet_link_tag "depot" %>
  </head>

    <body id="store">
        <div id="banner">
            <%= @page_title || "menu" %>
        </div>

        <div id="columns">
            <div id="side">
                <% if @cart %>
                    <%= hidden_div_if(@cart.line_items.empty?, :id => "cart") do %>
                        <%= render @cart %>
                    <% end %>
                <% end %>
                
                <% @types.each do |type| %>
                    <div class="entry">
                        <%= link_to type.type_food, products_path(type: type.id) %>
                    </div>
                <% end %>
            </div>
        </div>

        <div id="main">
            <%= yield %>
        </div>

    </body>
</html>