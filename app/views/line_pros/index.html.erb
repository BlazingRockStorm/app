<p id="notice"><%= notice %></p>

<h1>Line Pros</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Cart</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @line_pros.each do |line_pro| %>
      <tr>
        <td><%= line_pro.product_id %></td>
        <td><%= line_pro.cart_id %></td>
        <td><%= line_pro.quantity %></td>
        <td><%= link_to 'Show', line_pro %></td>
        <td><%= link_to 'Edit', edit_line_pro_path(line_pro) %></td>
        <td><%= link_to 'Destroy', line_pro, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Line Pro', new_line_pro_path %>
