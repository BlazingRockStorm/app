<p id="notice"><%= notice %></p>

<h1>Line Products</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Cart</th>
      <th>Quantity</th>
      <th>Order</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @line_products.each do |line_product| %>
      <tr>
        <td><%= line_product.product_id %></td>
        <td><%= line_product.cart_id %></td>
        <td><%= line_product.quantity %></td>
        <td><%= line_product.order_id %></td>
        <td><%= link_to 'Show', line_product %></td>
        <td><%= link_to 'Edit', edit_line_product_path(line_product) %></td>
        <td><%= link_to 'Destroy', line_product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Line Product', new_line_product_path %>
