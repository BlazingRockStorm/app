<table>
  <tbody>
    <% @products.each do |product| %>
        <div class="entry">
          <div class = "images">
            <%= image_tag(product.image_url, :size => "240x220") %>      
          </div>

          <div class="price_line">
            <h3><%= product.name %></h3> 
              <span class="price"><%= product.price %></span>
              <%= button_to '+', line_items_path(:product_id => product) %>
          </div>

        </div>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Product', new_product_path %>
